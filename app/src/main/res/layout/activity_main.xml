<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youzan.zancharts.smaple.MainActivity">

    <com.youzan.zancharts.ZanBarChart
        android:id="@+id/bar_chart"
        android:background="@drawable/bg_chart"
        app:layout_aspectRatio="200%"
        app:layout_widthPercent="100%"/>

    <com.youzan.zancharts.ZanLineChart
        android:id="@+id/line_chart"
        android:layout_below="@id/bar_chart"
        android:layout_marginTop="20dp"
        app:layout_aspectRatio="200%"
        app:layout_widthPercent="100%"/>
</android.support.percent.PercentRelativeLayout>
