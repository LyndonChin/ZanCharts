<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pie_chart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.youzan.zancharts.smaple.PieChartActivity">

    <com.youzan.zancharts.ZanPieChart
        android:id="@+id/pie_chart"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="100%"/>

    <SeekBar
        android:id="@+id/female_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pie_chart"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/female_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/female_range" />

    <SeekBar
        android:id="@+id/male_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/female_range"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/male_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/male_range" />

    <SeekBar
        android:id="@+id/unknown_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/male_range"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/unknown_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/unknown_range" />

</android.support.percent.PercentRelativeLayout>

